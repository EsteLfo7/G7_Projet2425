<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.g7_projet_2425.controllers.EmployeeController">
    <Label text="Gestion des Employés"/>
    <TableView fx:id="employeeTable">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Nom" fx:id="nameColumn"/>
            <TableColumn text="Rôle" fx:id="roleColumn"/>
        </columns>
    </TableView>
    <HBox spacing="10">
        <Button text="Ajouter" onAction="#addEmployee"/>
        <Button text="Modifier" onAction="#editEmployee"/>
        <Button text="Supprimer" onAction="#deleteEmployee"/>
    </HBox>
</VBox>
