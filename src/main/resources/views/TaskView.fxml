<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- task_view.fxml -->
<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.g7_projet_2425.controllers.TaskController">
    <top>
        <Label style="-fx-font-size: 18; -fx-padding: 10; -fx-alignment: center;" text="Liste des Tâches" />
    </top>
    <center>
        <TableView fx:id="taskTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="titleColumn" text="Titre" />
                <TableColumn fx:id="priorityColumn" text="Priorité" />
                <TableColumn fx:id="endDateColumn" text="Date de fin" />
                <TableColumn fx:id="statusColumn" text="Statut" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Button onAction="#openCalendarView" text="Voir le Calendrier" />
            <Button onAction="#openKanbanView" text="Voir le Kanban" />
        </HBox>
    </bottom>
</BorderPane>
